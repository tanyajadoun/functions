//how to pass array in a function       
       
#include <stdio.h>

void myfunction(int arr[],int n){
    for(int i=0;i<n;i++){
        printf("%d ",arr[i]);
    }
    printf("\n");
}
int main(){
    int a;
    printf("enter the size of array:\n");
    scanf("%d",&a);
    int arr[a];
    printf("enter the elements of array\n");
    for(int i=0;i<a;i++){
        printf("the elements %d is ",i+1);
        scanf("%d",&arr[i]);
    }
    myfunction(arr,a);
    return 0;
}

